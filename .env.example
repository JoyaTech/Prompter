# Alchemist Platform Environment Configuration

# API Keys - Required
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here (optional)

# External Integration API Keys
GITHUB_TOKEN=your_github_token_for_awesome_chatgpt_prompts
NOTION_API_KEY=your_notion_api_key_for_sabrina_library
NOTION_DATABASE_ID=your_notion_database_id

# Prompt Library Integrations
SABRINA_DATABASE_ID=your_sabrina_ramonov_notion_database_id
PROMPTBASE_API_KEY=your_promptbase_api_key (optional)

# Hebrew and Israeli Market APIs
HEBREW_PROMPTS_API_URL=https://api.hebrew-prompts.com/v1
ISRAELI_STARTUPS_API_KEY=your_israeli_startups_api_key

# Music and Creativity APIs
SPOTIFY_CLIENT_ID=your_spotify_client_id (for music integration)
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# Database Configuration (for production)
DATABASE_URL=postgresql://user:password@localhost:5432/alchemist
REDIS_URL=redis://localhost:6379
ELASTICSEARCH_URL=http://localhost:9200

# Application Settings
NODE_ENV=development
VITE_APP_NAME=Alchemist
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="Advanced Prompt Engineering Platform"

# Language and Localization
VITE_DEFAULT_LANGUAGE=en
VITE_SUPPORTED_LANGUAGES=en,he
VITE_RTL_LANGUAGES=he,ar

# ADHD and Accessibility Features
VITE_ENABLE_FOCUS_MODE=true
VITE_ENABLE_TASK_BREAKDOWN=true
VITE_DEFAULT_TIMER_DURATION=25
VITE_ENABLE_REDUCED_MOTION=auto

# Music and Creativity Features  
VITE_ENABLE_MUSIC_HUB=true
VITE_ENABLE_COLLABORATION_TOOLS=true
VITE_DEFAULT_BPM=120

# Analytics and Monitoring (optional)
VITE_ANALYTICS_ID=your_analytics_id
VITE_SENTRY_DSN=your_sentry_dsn

# Feature Flags
VITE_ENABLE_EXPERIMENTAL_FEATURES=false
VITE_ENABLE_BETA_FEATURES=true
VITE_ENABLE_HEBREW_VOICE=false
VITE_ENABLE_PROMPT_MARKETPLACE=false

# Security
VITE_API_BASE_URL=http://localhost:3000/api
VITE_ENABLE_HTTPS=false
VITE_CORS_ORIGIN=http://localhost:5173

# Development
VITE_DEV_TOOLS=true
VITE_DEBUG_MODE=true